---
import "../styles/global.css";
import Card from "../components/Card.astro";
import Navigation from "../components/Navigation.astro";
import Article from "../components/Article.astro";
import Back from "../components/Back.astro";
import Lineup from "../components/Lineup.astro";
import Karrusel from "../components/Karrusel.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/karrusel-logo.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <main>
      <Navigation />
      <div class="frontpage-container">
        <img class="grid" src="./Images/alt.png" alt="Grid" />
        <img class="dato" src="./Images/dato.png" alt="Dato for festival" />
        <img class="hero" src="./Images/hero.png" alt="Overskrift" />
        <div class="lineup-container">
          <Lineup />
        </div>
        <img class="news" src="./Images/news.png" alt="news" />
      </div>
      <div class="info-box">
        <img src="./Images/info-news.png" alt="Ramme" />
      </div>
      <Karrusel />
      <div class="sign-container">
        <div class="grid-1">
          <h1>NEWS SIGN UP</h1>
          <p>Sign up for relevant info, artist news and special offers</p>
          <form action="email">Email</form>
          <button>Sign-up</button>
        </div>
        <div class="grid-2">
          <img src="./Images/signup-right.png" alt="Sign-up Billede" />
        </div>
      </div>
    </main>
  </body>
</html>

<style>
  .grid {
    width: 100%;
    height: 100vh;
  }

  .dato {
    width: 40%;
    height: auto;
    position: absolute;
    top: 50%;
    left: 48%;
    transform: translate(-50%, -50%);
    z-index: 10;
  }

  .hero {
    width: 55%;
    height: auto;
    position: absolute;
    top: 35%;
    left: 48%;
    transform: translate(-50%, -50%);
    z-index: 10;
  }

  .frontpage-container {
    position: relative;
  }

  .lineup-container {
    top: 60%;
    left: 42%;
    z-index: 10;
    position: absolute;
  }

  .news {
    top: 91.2%;
    left: 10%;
    z-index: 10;
    position: absolute;
    width: 80%;
    height: auto;
  }

  /* Sign-up */

  .sign-container {
    width: 80%;
    justify-content: center;
    border: 1px solid white;
    background-color: #404457;
    clip-path: polygon(7% 0, 100% 0, 100% 90%, 28% 91%, 18% 100%, 0 100%, 0 8%);
    margin: 0 auto;
    display: flex;
    position: relative; /* GÃ¸r det muligt at positionere pseudo-elementer relativt */
  }

  .sign-container::before,
  .sign-container::after {
    content: "";
    position: absolute;
    background-color: #000000; /* Matcher baggrundsfarven */
    width: 100px; /* Juster efter behov */
    height: 100px; /* Juster efter behov */
    border-radius: 50%; /* Giver runding */
    top: 80%;
    left: 95%;
  }
</style>

<style is:global>
  body {
    background-color: black;
  }

  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }
</style>
