---
import "../../pages/Fonts/Warpen.otf";
import "../../pages/Fonts/Warpen.ttf";
---

<a href="/listeview"><button>Line-up</button></a>

<style>
  button {
    background-color: #ba33ff;
    text-decoration: none;
    color: black;
    padding: 1rem 2rem;
    text-align: center;
    font-size: 40px;
    box-shadow: -6px 6px rgba(0, 0, 0, 0.8);
    border-radius: 1rem 0 1rem;
    border: 2px solid black;
    font-family: Warpen, sans-serif;
  }
  button:hover {
    background-color: #200589;
    color: white;
  }

  @media (min-width: 1025px) {
    button {
      background-color: #ba33ff;
      text-decoration: none;
      color: black;
      padding: 0.5rem 2rem;
      text-align: center;
      font-size: 30px;
      box-shadow: -6px 6px rgba(0, 0, 0, 0.8);
      border-radius: 1rem 0 1rem;
      border: 2px solid black;
      font-family: Warpen, sans-serif;
      display: inline-block;
    }
    button:hover {
      background-color: #200589;
      color: white;
    }
  }
  @media (max-width: 1024px) {
    button {
      background-color: #ba33ff;
      text-decoration: none;
      color: black;
      padding: 0.5rem 2rem;
      text-align: center;
      font-size: 25px;
      box-shadow: -6px 6px rgba(0, 0, 0, 0.8);
      border-radius: 1rem 0 1rem;
      border: 2px solid black;
      font-family: Warpen, sans-serif;
      display: inline-block;
    }
    button:hover {
      background-color: #200589;
      color: white;
    }
  }

  @media (max-width: 768px) {
    button {
      background-color: #ba33ff;
      text-decoration: none;
      color: black;
      padding: 0.3rem 1rem;
      text-align: center;
      font-size: 20px;
      box-shadow: -6px 6px rgba(0, 0, 0, 0.8);
      border-radius: 0.5rem 0 0.5rem;
      border: 2px solid black;
      font-family: Warpen, sans-serif;
      display: inline-block;
    }
    button:hover {
      background-color: #200589;
      color: white;
    }
  }

  @media (max-width: 480px) {
    button {
      background-color: #ba33ff;
      text-decoration: none;
      color: black;
      padding: 0.3rem 1rem;
      text-align: center;
      font-size: 15px;
      box-shadow: -6px 6px rgba(0, 0, 0, 0.8);
      border-radius: 0.5rem 0 0.5rem;
      border: 2px solid black;
      font-family: Warpen, sans-serif;
      display: inline-block;
    }
    button:hover {
      background-color: #200589;
      color: white;
    }
  }
</style>
