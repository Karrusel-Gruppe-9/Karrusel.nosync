<style>
  .grid-container {
    margin-top: 10%;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 200px;
  }
  .container {
    display: flex;
    flex-direction: column; /* Gør containeren lodret */
    justify-content: space-between; /* Fordeler pladsen mellem børnene */
    align-items: center; /* Centrerer horisontalt */
    position: relative;
    width: 100%;
    height: 100%;
  }

  .background-box {
    width: 426;
    height: 177px;
    position: absolute;
    border-radius: 15px;
    border: 0.5px white solid;
  }

  .image-wrapper {
    width: 206px;
    height: 166px;
    position: absolute;
    overflow: hidden;
    border: 0.5px white solid;
    border-radius: 15px;
    clip-path: polygon(
      77% 12%,
      82% 3%,
      98% 3%,
      98% 90%,
      58% 90%,
      44% 96%,
      2% 96%,
      2% 3%,
      18% 3%,
      23% 12%
    );
  }

  .image {
    width: 206px;
    height: 166px;
    border-radius: 15px;
    top: 5%;

    position: absolute;
    clip-path: polygon(
      77% 12%,
      82% 3%,
      98% 3%,
      98% 90%,
      58% 90%,
      44% 96%,
      2% 96%,
      2% 3%,
      18% 3%,
      23% 12%
    );
  }

  .image-border {
    width: 206px;
    height: 166px;

    border-radius: 15px;
  }

  .date-text {
    color: white;
    font-size: 10px;
    font-family: "IBM Plex Mono", monospace;
    text-align: center;
    position: absolute;
    top: 150px;
    left: 290px;
  }

  .title-text {
    color: white;
    font-weight: 150;
    letter-spacing: 0.4px;
    font-size: 15px;
    font-family: "IBM Plex Mono", monospace;
    text-align: center; /* Centrerer teksten horisontalt */
    position: absolute; /* Gør det muligt at placere den ovenfor */
    top: 10px; /* Juster dette for at placere den tættere på toppen */
  }
</style>
