<style>
  .circle {
    background-color: #d9d9d9;
    border-radius: 50%;
    margin-right: 25px;
    display: flex; /* Gør cirklen til en flex-container */
  }

  .circle img {
    width: 20px; /* Juster denne værdi for at ændre bredden af billederne */
    height: 20px; /* Juster denne værdi for at ændre højden af billederne */
    object-fit: contain; /* Sørger for, at billederne bevarer deres proportioner */
  }

  ul {
    list-style: none;
    height: auto;
    align-items: center;
    display: flex;
    width: 100%;
    margin-top: 10px;
  }

  li {
    list-style: none;
  }
  a {
    text-decoration: none;
  }

  ul li a:hover {
    color: #ae6cff;
    width: 80%;
    border-radius: 1rem;
  }

  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
  }

  .bar {
    display: block;
    width: 25px;
    height: 3px;
    margin: 5px auto;
    transition: all 0.3s ease-in-out;
    background-color: #101010;
    align-content: end;
  }

  .hamburger {
    display: none;
    cursor: pointer;
    margin-left: auto;
  }

  .hamburger img {
    width: 25px; /* Juster denne værdi for at ændre bredden */
    height: 25px; /* Juster denne værdi for at ændre højden */
    object-fit: contain; /* Sørger for, at billedet bevarer sine proportioner */
  }

  .nav-menu {
    display: flex;
    flex-direction: column; /* Vertikal orientering */
    justify-content: flex-start; /* Sørg for, at de starter øverst */

    justify-content: space-between;
    align-items: center;
    z-index: 1000;
  }

  .nav-link {
    font-size: 1rem;
    font-weight: 400;
    color: #ffffff;
    display: flex; /* Sørg for, at teksten og cirklen forbliver i en linje */
    align-items: center; /* Centrér indholdet vertikalt */
    padding: 10px 15px; /* Tilføj padding for at give klikområde */
    transition: color 0.3s ease; /* Tilføj en overgangseffekt til farven */
    white-space: nowrap; /* Forhindre tekstbrydning */
  }

  .nav-link:hover {
    color: #ffffff;
  }

  .nav-logo {
    font-size: 2.1rem;
    font-weight: 500;
    margin-left: 1.5rem;
  }

  .nav-menu {
    position: fixed;
    top: 5rem;
    right: -100%; /* Skjult til venstre for skærmen */
    flex-direction: column;
    background-color: rgba(48, 48, 48, 0.7);
    width: 15%;
    height: 500px; /* Fast højde */
    text-align: center;
    transition: 0.3s;
    box-shadow: 0 10px 27px rgba(0, 0, 0, 0.05);
    border: 1px solid white;
  }

  .nav-menu.active {
    right: 0;
  }

  .nav-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 10px;
    margin: 0 20px 20px;
    border-bottom: solid 1px white;
    width: 76%;
  }

  .login-item {
    margin-top: auto; /* Skub login-elementet til bunden */
    border-bottom: none; /* Fjern linjen for login-elementet */
  }

  .hamburger {
    display: block;
    cursor: pointer;
  }

  .hamburger.active .bar:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active .bar:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  .hamburger.active .bar:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }
</style>

