---
import SignupButton from "./SignupButton.astro";
---

<h1>HOLD DIG OPDATERET</h1>
<div class="signup-wrapper">
  <img src="./Images/signup-border.png" alt="Border" />
  <div class="grid-container">
    <div class="grid-1">
      <h2>NEWS SIGN UP</h2>
      <p>Sign up for relevant info, artist news, and special offers</p>
      <div class="Button-container">
        <form action="email">Email:</form>
        <SignupButton />
      </div>
    </div>
    <div class="grid-2">
      <img src="./Images/signup.png" alt="Sign-up Image" />
    </div>
  </div>
</div>

<style>
  h1 {
    color: white;
    text-align: center;
    margin-bottom: 5%;
    font-size: 3vw;
  }

  h2 {
    font-size: 2.5cqw;
  }
  .signup-wrapper {
    display: flex;
    position: relative;
    width: 100%;
    height: auto;
    justify-content: center;
  }

  .signup-wrapper img {
    width: 70%;
    height: 50vh;
    display: flex;
  }

  .grid-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    position: absolute;
    grid-column: 1;
    z-index: 2;
    color: white;
    padding-top: 2%;
  }

  .grid-1,
  .grid-2 {
    position: relative;
    z-index: 2;
  }

  .grid-1 {
    grid-column: 1;
    transform: translate(10%, 0%);
  }
  .grid-2 {
    grid-column: 2;
  }

  .grid-1 h2,
  .grid-1 p {
    padding: 0 0 10% 0;
  }

  .grid-1 p {
    font-size: 2vw;
    max-width: 400px;
  }

  .grid-2 img {
    width: 90%;
    height: auto;
  }

  .Button-container {
    display: flex;
    align-items: center;
  }
  form {
    font-size: 2vw;
    justify-self: end;
    border: 1px solid #ba33ff;
    padding-right: 30%;
    margin-right: 10px;
  }
</style>
